{
  "info": {
    "name": "Vercel API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "https://adminbackend-psi.vercel.app/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "url": "https://adminbackend-psi.vercel.app/api/auth/register",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const responseData = pm.response.json();",
              "    pm.environment.set('token', responseData.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "url": "https://adminbackend-psi.vercel.app/api/auth/login",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Get Users",
      "request": {
        "method": "GET",
        "url": "https://adminbackend-psi.vercel.app/api/users",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ]
      }
    },
    {
      "name": "Block Users",
      "request": {
        "method": "POST",
        "url": "https://adminbackend-psi.vercel.app/api/users/block",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"userIds\": [\"user_id_here\"]\n}"
        }
      }
    },
    {
      "name": "Unblock Users",
      "request": {
        "method": "POST",
        "url": "https://adminbackend-psi.vercel.app/api/users/unblock",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"userIds\": [\"user_id_here\"]\n}"
        }
      }
    },
    {
      "name": "Delete Users",
      "request": {
        "method": "POST",
        "url": "https://adminbackend-psi.vercel.app/api/users/delete",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"userIds\": [\"user_id_here\"]\n}"
        }
      }
    }
  ]
}